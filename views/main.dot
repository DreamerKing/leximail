
	<section id="app" class="splitter">

		<div id="sidebar">
			<ul id="filters">
				<li class="all filter selected">
					<i class="icon fa fa-bars"></i>
					<span class="title">All</span>
				</li>
				<li class="unread filter">
					<i class="icon fa fa-circle"></i>
					<span class="title">Unread</span>
				</li>
				<li class="starred filter">
					<i class="icon fa fa-star"></i>
					<span class="title">Starred</span>
				</li>
			</ul>

			<ul id="labels">
			</ul>
			
			<p class="empty-message">You have no accounts. Click on the + button below to add some.</p>

			<div class="bar">
				<button id="refresh-button" title="Refresh"></button>
				<button id="add-button" title="Add Account"><i class="icon fa fa-plus-circle"></i></button>
			</div>
		</div>

		<div id="right-side" class="splitter">

			<div id="messages">
				<ul id="messages-list">
				</ul>

				<div class="bar">
					<button id="mark-all-as-read-button" title="Mark All As Read"><i class="icon fa fa-check-circle"></i></button>
					
					<div id="item-count"></div>

					<input id="search-input" placeholder="Search Messages">
					<button id="search-button" title="Search"><i class="icon fa fa-search"></i></button>
				</div>
			</div>

			<div id="message">
				<div id="post-window">
				</div>

				<div class="bar" class="disabled">
					<button id="star-button" title="Toggle Star Status"><i class="icon fa fa-star-o"></i></button>
					<button id="read-button" title="Toggle Read Status"><i class="icon fa fa-circle-o"></i></button>
					<button id="reply-button" title="Reply"><i class="icon fa fa-mail-reply"></i></button>
					<button id="forward-button" title="Forward"><i class="icon fa fa-mail-forward"></i></button>

					<button id="settings-button" title="Settings"><i class="icon fa fa-cog"></i></button>
				</div>
			</div>

		</div>
	</section>

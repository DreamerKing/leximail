
	<section id="app" class="splitter">

		<div id="sidebar">
			<ul id="filters">
				<li class="all filter selected">
					<img class="icon" width="16" height="16" src="themes/default/img/icon_all.png">
					<span class="title">All</span>
				</li>
				<li class="unread filter">
					<img class="icon" width="16" height="16" src="themes/default/img/icon_unread.png">
					<span class="title">Unread</span>
				</li>
				<li class="starred filter">
					<img class="icon" width="16" height="16" src="themes/default/img/icon_starred.png">
					<span class="title">Starred</span>
				</li>
			</ul>

			<ul id="labels">
			</ul>
			
			<p class="empty-message">You have no accounts. Click on the + button below to add some.</p>

			<div class="bar">
				<button id="refresh-button" title="Refresh"></button>
				<button id="add-button" title="Add Account"></button>
			</div>
		</div>

		<div id="right-side" class="splitter">

			<div id="messages">
				<ul id="messages-list">
				</ul>

				<div class="bar">
					<button id="mark-all-as-read-trigger" title="Mark All As Read"></button>
					<div id="mark-all-as-read-popup">
						<div id="mark-all-as-read-button">Mark All As Read</div>
					</div>
					
					<div id="item-count"></div>

					<input id="search-input" placeholder="Search Messages">
					<button id="search-button" title="Search"></button>
				</div>
			</div>

			<div id="message">
				<div id="post-window">
				</div>

				<div class="bar" class="disabled">
					<!-- button id="close-post-button" title="Close Post"></button -->
					<button id="star-button" title="Toggle Star Status"></button>
					<button id="read-button" title="Toggle Read Status"></button>
					<button id="forward-button" title="Forward"></button>

					<div id="link-url"></div><button id="settings-button" title="Settings"></button>
				</div>
			</div>

		</div>
	</section>
